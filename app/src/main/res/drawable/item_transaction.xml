<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_b6"/>
            <corners android:radius="26dp"/> <!-- Border radius -->
        </shape>
    </item>

    <!-- Estado seleccionado -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/navigation"/>
            <corners android:radius="16dp"/> <!-- Border radius -->
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/platinum"/>
            <corners android:radius="26dp"/> <!-- Border radius -->
        </shape>
    </item>

</selector>
