<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <!-- Fragmento de bienvenida -->
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.jobd.solapp.WelcomeFragment"
        android:label="Bienvenida"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_loginFragment"
            app:destination="@id/loginFragment"/>
        <action
            android:id="@+id/action_welcomeFragment_to_registerFragment"
            app:destination="@id/registerFragment"/>
    </fragment>

    <!-- Fragmento de login -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.jobd.solapp.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"/>
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"/>
    </fragment>

    <!-- Fragmento de registro -->
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.jobd.solapp.RegisterFragment"
        android:label="Registro"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"/>
    </fragment>

    <!-- Fragmento de inicio (home) -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.jobd.solapp.HomeFragment"
        android:label="Inicio"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_gastoFragment"
            app:destination="@id/gastoFragment" />
    </fragment>

    <!-- Fragmento de añadir gasto -->
    <fragment
        android:id="@+id/gastoFragment"
        android:name="com.jobd.solapp.GastoFragment"
        android:label="Añadir Gasto"
        tools:layout="@layout/fragment_gasto" />
</navigation>
