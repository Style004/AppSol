<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="KeypadButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:backgroundTint">#F5F5F5</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- En res/values/styles.xml o themes.xml -->
    <style name="CategoryItemStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <!-- ESTA ES LA LÍNEA CLAVE -->
        <item name="android:orientation">vertical</item>
        <!-- Estas líneas aseguran el centrado y el espaciado -->
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/category_item_background</item>
    </style>

</resources>